<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lt_root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="11dp"
    android:padding="15dp">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:paddingTop="7dp"
        android:paddingStart="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/lt_numero_documento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NÃºmero de documento"
                style="@style/textoAzulOscuroNegritaL"
                android:layout_marginEnd="10dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/lt_nombre_paciente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre paciente"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            style="@style/textoAzulNegritaL"/>

    </LinearLayout>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@drawable/flecha_verde_mar"/>

</LinearLayout>