<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.yulagarces.citobot.ui.screening.TamizajeFotoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/tf_tamizaje_ico"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/icono_tamizaje"
            android:layout_marginTop="40dp"/>
        <TextView
            android:id="@+id/tf_tamizaje_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/t1_titulo"
            android:gravity="center"
            android:padding="10dp"
            android:textAppearance="@style/textoAzulNegritaXL"/>

        <TextView
            android:id="@+id/tf_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="75dp"
            android:layout_marginEnd="75dp"
            android:padding="10dp"
            android:gravity="center_horizontal"
            android:text="@string/tf_toma"
            android:background="@drawable/fondo_gris_azulado"
            android:textAppearance="@style/textoVerdeNegritaL"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/tf_iniciar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:padding="15dp"
            android:text="@string/t1_iniciar"
            android:textAppearance="@style/textoBlancoL"
            android:background="@drawable/btn_primario"/>

        <LinearLayout
            android:id="@+id/tf_contenedor_verificacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:orientation="vertical">
            <RadioGroup
                android:id="@+id/tf_verificacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/fondo_blanco">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <RadioButton
                        android:id="@+id/tf_img1"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/principal"
                        android:layout_marginTop="10dp"  />
                    <ImageView
                        android:id="@+id/tf_iv_img1"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <RadioButton
                        android:id="@+id/tf_img2"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/principal"
                        android:layout_marginTop="10dp"  />
                    <ImageView
                        android:id="@+id/tf_iv_img2"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <RadioButton
                        android:id="@+id/tf_img3"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/principal"
                        android:layout_marginTop="10dp"  />
                    <ImageView
                        android:id="@+id/tf_iv_img3"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tf_contenedor_entrenamiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/tf_entrenamiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/fondo_blanco">

                <ImageView
                    android:id="@+id/tf_entrenamiento_img1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"/>

                <ImageView
                    android:id="@+id/tf_entrenamiento_img2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"/>

                <ImageView
                    android:id="@+id/tf_entrenamiento_img3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"/>

                <ImageView
                    android:id="@+id/tf_entrenamiento_img4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"/>

                <ImageView
                    android:id="@+id/tf_entrenamiento_img5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/t2_contenedor_contraste_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="45dp"
            android:visibility="gone"
            android:padding="25dp"
            android:background="@drawable/fondo_blanco"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/t2_contraste_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VPH"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:textAppearance="@style/textoAzulOscuroNegritaL"/>

            <RadioGroup
                android:id="@+id/t2_vph"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="3">
                <RadioButton
                    android:id="@+id/radio_sin_vph"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sin VPH"
                    android:buttonTint="@color/principal"
                    android:textColor="@color/black"
                    android:textColorLink="@color/black" />
                <RadioButton
                    android:id="@+id/radio_vph_positivo"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/principal"
                    android:text="Positivo"/>
                <RadioButton
                    android:id="@+id/radio_vph_negativo"
                    android:layout_width="wrap_content"
                    android:buttonTint="@color/principal"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Negativo"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tf_botones_verifica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tf_foto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tf_toma_otra"
                android:padding="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/btn_primario"
                android:textAppearance="@style/textoBlancoL"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tf_enviar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tf_enviar"
                android:padding="15dp"
                android:background="@drawable/btn_primario"
                android:textAppearance="@style/textoBlancoL"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tf_botones_entrena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tf_siguiente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tf_toma_otra"
                android:padding="15dp"
                android:background="@drawable/btn_primario"
                android:textAppearance="@style/textoBlancoL"/>
        </LinearLayout>
    </LinearLayout>



</androidx.core.widget.NestedScrollView>